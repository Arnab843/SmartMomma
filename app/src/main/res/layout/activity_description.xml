<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mindmines.smartmomma.DescriptionActivity">
<LinearLayout
    android:layout_alignParentStart="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_description_linearlayout"
    android:orientation="vertical"

    android:layout_alignParentLeft="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:id="@+id/activity_description_imageview"
        android:padding="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/activity_description_title"
        android:padding="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:textSize="12sp"
        android:id="@+id/activity_description_des"
        android:padding="5dp"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="48dp" />


</LinearLayout>



    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_des"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFF"
        android:layout_alignParentRight="true">
        
        <android.support.design.widget.TabItem
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Home"
            android:icon="@drawable/home"
            />

        <android.support.design.widget.TabItem
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="About"
            android:icon="@drawable/about"
            />
        <android.support.design.widget.TabItem
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="Upgrade"
            android:icon="@drawable/premium"
            />
    </android.support.design.widget.TabLayout>

</RelativeLayout>
